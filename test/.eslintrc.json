{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "describe": true,
        "expect": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true,
        "console": true
    },
    "extends": "eslint:recommended"
}
